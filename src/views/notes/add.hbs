<section class="section">
    <div class="container">
        <div class="columns">
            <div class="column is-one-third is-offset-one-third">
                <div class="box">
                    <div class="content">
                        <h1 class="title">Nueva nota</h1>
                        <p class="subtitle">Agrega una nueva nota</p>
                    </div>
                    <form action="/notes/add" method="POST">
                        <div class="field">
                            <p class="control">
                                <input class="input" type="text" placeholder="Título" name="title">
                            </p>
                        </div>
                        <div class="field">
                            <p class="control">
                                <textarea class="textarea" placeholder="Descripción" name="description"></textarea>
                            </p>
                        </div>
                        <div class="field">
                            <div class="control">
                                <button class="button is-fullwidth is-primary">Agregar nota</button>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="field">
                    <div class="control">
                        <a class="button is-fullwidth is-white" href="/notes">Cancelar</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>